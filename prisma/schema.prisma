// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RandomUser {
  id String @id @unique

  handle String
  query  String?

  stats RandomStat[]
}

model RandomStat {
  id Int @id @default(autoincrement())

  user   RandomUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  problem        Int
  tier           Int
  time           Int
  title          String
  submittedAfter Int
  success        Boolean
}
